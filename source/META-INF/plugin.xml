<idea-plugin version="2">
  <name>CQ5 Content Editor</name>
  <description>short description of the plugin</description>
  <version>1.0</version>
  <vendor>YourCompany</vendor>
  <idea-version since-build="8000"/>

  <application-components>
    <!-- Add your application components here -->
  </application-components>

  <project-components>
    <component>
        <implementation-class>velir.intellij.cq5.components.JcrViewComponent</implementation-class>
    </component>
  </project-components>

  <actions>
      <group id="velir.intellij.cq5.actions.felix.Menu" text="Felix" description="Felix Actions">
          <add-to-group group-id="MainMenu" anchor="after" relative-to-action="VcsGroups" />
          <action id="velir.intellij.cq5.actions.felix.OpenServerConfiguration"
                  class="velir.intellij.cq5.actions.felix.OpenServerConfiguration"
                  text="Open Server Configuration"
                  description="Open the Felix server configuration." />
      </group>
	  <action id="velir.intellij.cq5.actions.content.NewComponent" class="velir.intellij.cq5.actions.content.NewComponent" text="New Component"
	          description="create a cq5 component">
		  <add-to-group group-id="NewGroup" anchor="last"/>
	  </action>
	  <action id="velir.intellij.cq5.actions.content.NewNode" class="velir.intellij.cq5.actions.content.NewNode" text="New Node"
	          description="create a cq5 node">
		  <add-to-group group-id="NewGroup" anchor="after" relative-to-action="velir.intellij.cq5.actions.content.NewComponent"/>
	  </action>
	  <action id="velir.intellij.cq5.actions.content.EditNode" class="velir.intellij.cq5.actions.content.EditNode" text="Edit Node"
              description="edit a jcr node">
		  <add-to-group group-id="ProjectViewPopupMenu" anchor="last" />
      </action>
	  <action id="velir.intellij.cq5.actions.content.UnpackXml" class="velir.intellij.cq5.actions.content.UnpackXml" text="Unpack Node XML"
	          description="unpacks subelements from xml, and creates folders for them">
		  <add-to-group group-id="ProjectViewPopupMenu" anchor="after" relative-to-action="velir.intellij.cq5.actions.content.EditNode"/>
	  </action>
	  <action id="velir.intellij.cq5.actions.content.ContextNodeCreator" class="velir.intellij.cq5.actions.content.ContextNodeCreator"
	          text="New Contextual Node" description="add an in-context node">
		  <add-to-group group-id="NewGroup" anchor="after" relative-to-action="velir.intellij.cq5.actions.content.NewNode" />
      </action>
	  <action id="velir.intellij.cq5.actions.content.ContextNodeCreator2" class="velir.intellij.cq5.actions.content.ContextNodeCreator2"
	          text="New Contextual Node" description="add an in-context node">
		  <add-to-group group-id="NewGroup" anchor="after" relative-to-action="velir.intellij.cq5.actions.content.ContentNodeCreator" />
	  </action>
	  <action id="velir.intellij.cq5.actions.content.ContextNodeCreator3" class="velir.intellij.cq5.actions.content.ContextNodeCreator3"
	          text="New Contextual Node" description="add an in-context node">
		  <add-to-group group-id="NewGroup" anchor="after" relative-to-action="velir.intellij.cq5.actions.content.ContentNodeCreator2" />
	  </action>
	  <action id="velir.intellij.cq5.actions.content.ContextNodeCreator4" class="velir.intellij.cq5.actions.content.ContextNodeCreator4"
	          text="New Contextual Node" description="add an in-context node">
		  <add-to-group group-id="NewGroup" anchor="after" relative-to-action="velir.intellij.cq5.actions.content.ContentNodeCreator3" />
	  </action>
	  <action id="velir.intellij.cq5.actions.content.ContextNodeCreator5" class="velir.intellij.cq5.actions.content.ContextNodeCreator5"
	          text="New Contextual Node" description="add an in-context node">
		  <add-to-group group-id="NewGroup" anchor="after" relative-to-action="velir.intellij.cq5.actions.content.ContentNodeCreator4" />
	  </action>
	  <action id="velir.intellij.cq5.actions.content.ContextNodeCreator6" class="velir.intellij.cq5.actions.content.ContextNodeCreator6"
	          text="New Contextual Node" description="add an in-context node">
		  <add-to-group group-id="NewGroup" anchor="after" relative-to-action="velir.intellij.cq5.actions.content.ContentNodeCreator5" />
	  </action>
	  <action id="velir.intellij.cq5.actions.content.ContextNodeCreator7" class="velir.intellij.cq5.actions.content.ContextNodeCreator7"
	          text="New Contextual Node" description="add an in-context node">
		  <add-to-group group-id="NewGroup" anchor="after" relative-to-action="velir.intellij.cq5.actions.content.ContentNodeCreator6" />
	  </action>
	  <action id="velir.intellij.cq5.actions.content.ContextNodeCreator8" class="velir.intellij.cq5.actions.content.ContextNodeCreator8"
	          text="New Contextual Node" description="add an in-context node">
		  <add-to-group group-id="NewGroup" anchor="after" relative-to-action="velir.intellij.cq5.actions.content.ContentNodeCreator7" />
	  </action>
  </actions>

  <extensions defaultExtensionNs="com.intellij">
	  <!-- Add your extensions here -->
	  <projectService serviceInterface="velir.intellij.cq5.jcr.Connection" serviceImplementation="velir.intellij.cq5.jcr.Connection" />
	  <projectConfigurable implementation="velir.intellij.cq5.ui.JCRSettings" />
  </extensions>
</idea-plugin>